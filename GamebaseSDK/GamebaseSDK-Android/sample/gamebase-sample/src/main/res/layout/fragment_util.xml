<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.toast.android.gamebase.sample.ui.UtilFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <TextView
                android:text="Toast Message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:textStyle="normal|bold"
                android:textSize="18sp" />

            <TextView
                android:text="Input Toast Message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView9" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:ems="10"
                android:id="@+id/editText_ToastMessage"
                android:text="input Message" />

            <RadioGroup
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RadioButton
                    android:text="TOAST_LENGTH_SHORT"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioButton_short" />

                <RadioButton
                    android:text="TOAST_LENGTH_LONG"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioButton_long" />
            </RadioGroup>

            <Button
                android:text="Show Toast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button_showToast"
                android:layout_marginBottom="60dp" />

            <TextView
                android:text="Alert Dialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView8"
                android:textSize="18sp"
                android:textStyle="normal|bold" />

            <TextView
                android:text="Input Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView10" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:text="Input Title"
                android:ems="10"
                android:id="@+id/editText_alertTItle" />

            <TextView
                android:text="Input Message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView11" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:text="Input Message"
                android:ems="10"
                android:id="@+id/editText_alertMessage" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:text="Dialog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioButton_dialog"
                    android:layout_weight="1" />

                <RadioButton
                    android:text="Selector Dialog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioButton_selector"
                    android:layout_weight="1" />

                <RadioButton
                    android:text="ChoiceItem Dialog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioButton_choiceItem"
                    android:layout_weight="1" />
            </RadioGroup>

            <Button
                android:text="Show Alert Dialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button_showAlertDialog" />

        </LinearLayout>

    </ScrollView>

</FrameLayout>
