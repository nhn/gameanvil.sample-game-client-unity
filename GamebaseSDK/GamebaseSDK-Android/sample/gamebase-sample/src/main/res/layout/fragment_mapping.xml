<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.toast.android.gamebase.sample.ui.MappingFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_mapping_lable"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp">

        <TextView
            android:text="@string/text_mapping_idp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="26dp"
            android:id="@+id/textView_mapping_lable"
            android:textSize="30sp"
            android:textStyle="normal|bold"
            android:textAlignment="center"
            android:textColor="@color/Toast"
            android:layout_weight="1" />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/textView_userID" />

        <Switch
            android:text="Guest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/switch_guest"
            android:layout_weight="1" />

        <Switch
            android:text="Google"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/switch_google"
            android:layout_weight="1" />

        <Switch
            android:text="Facebook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/switch_facebook"
            android:layout_weight="1" />

        <Switch
            android:text="Payco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/switch_payco"
            android:layout_weight="1" />

        <Switch
            android:text="Naver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/switch_naver"
            android:layout_weight="1" />

        <Switch
            android:text="Line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/switch_line"
            android:layout_weight="1" />

        <Button
            android:text="Logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/button_logout"
            android:layout_weight="1" />

        <Button
            android:text="Withdraw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button_withdraw"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="1" />

    </LinearLayout>

</FrameLayout>
