<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.toast.android.gamebase.sample.ui.PushFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Switch
            android:text="Notification Enable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/switch_notification"
            android:layout_weight="1" />

        <Switch
            android:text="Advertisement Agreement "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/switch_adv" />

        <Switch
            android:text="Advertisement Agreement Night"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/switch_adv_Night" />

    </LinearLayout>

</FrameLayout>
